<main class='add-workout-page'>
  <div class='sign-form-container exercises-container'>
    <h2>Exercises</h2>
    <form>
      <input
        class='exercise-search'
        type='text'
        placeholder='Search for an exercise'
      />
      <div class='select-btns'>
        <div class='select-btn'>
          <label for='targets'></label>
          <select name='targets' id='targets' placeholder='Muscle'>
            <option value='' disabled selected>Select muscle</option>
            <option value='all'>All</option>
            <option value='abs'>Abs</option>
            <option value='Lats'>Lats</option>
            <option value='calves'>Calves</option>
            <option value='quads'>Quads</option>
            <option value='pectorals'>Pectorals</option>
            <option value='glutes'>Glutes</option>
            <option value='hamstrings'>Hamstrings</option>
            <option value='adductors'>Adductors</option>
            <option value='triceps'>Triceps</option>
            <option value='cardiovascularSystem'>
              Cardiovascular system
            </option>
          </select>
        </div>
        <div class='select-btn'>
          <label for='equipment'></label>
          <select name='equipment' id='equipment'>
            <option value='' disabled selected>Select equipment</option>
            <option value='all'>All</option>
            <option value='olympicBarbell'>Olympic barbell</option>
            <option value='resistenceBand'>Resistence band</option>
            <option value='rope'>Rope</option>
            <option value='sledMachine'>Sled machine</option>
            <option value='smithMachine'>Smith machine</option>
            <option value='tire'>Tire</option>
            <option value='barbell'>Barbell</option>
            <option value='bodyWeight'>Body weight</option>
            <option value='assisted'>Assisted</option>
          </select>
        </div>
      </div>
    </form>
  </div>
</main>